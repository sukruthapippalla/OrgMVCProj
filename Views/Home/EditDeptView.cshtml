
@model OrgMVC.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h1>EditDepartment</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- DeptId hidden field to identify the department -->
            <input type="hidden" asp-for="DeptId" />

            <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LibId" class="control-label"></label>
                <input asp-for="LibId" class="form-control" />
                <span asp-validation-for="LibId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}